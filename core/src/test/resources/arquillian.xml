<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns="http://jboss.org/schema/arquillian"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://jboss.org/schema/arquillian
        http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <defaultProtocol type="jmx-as7"/>

    <group qualifier="Grid">
        <container qualifier="container1">
            <configuration>
                <property name="jbossHome">${basedir}/target/node1/infinispan-server-${version.infinispan}</property>
                <property name="managementPort">9990</property>
                <property name="serverConfig">clustered.xml</property>
                <property name="javaVmArguments">-Djava.net.preferIPv4Stack=true -Djboss.node.name=node0</property>
                <property name="jmxDomain">jboss.datagrid-infinispan</property>
            </configuration>
        </container>
        <container qualifier="container2">
            <configuration>
                <property name="jbossHome">${basedir}/target/node2/infinispan-server-${version.infinispan}</property>
                <property name="managementPort">10090</property>
                <property name="serverConfig">clustered.xml</property>
                <property name="javaVmArguments">-Djava.net.preferIPv4Stack=true -Djboss.node.name=node1
                    -Djboss.socket.binding.port-offset=100
                </property>
                <property name="jmxDomain">jboss.datagrid-infinispan</property>
            </configuration>
        </container>
    </group>

</arquillian>
